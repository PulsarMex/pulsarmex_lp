<section
  class="relative bg-gradient-to-b from-blue-950 to-black text-white px-10 sm:px-14 lg:px-24 py-20 pt-30"
>
  <div
    class="absolute inset-0 bg-[url('/constelaciones.webp')] bg-cover bg-repeat bg-center opacity-5 pointer-events-none"
    aria-hidden="true"
  >
  </div>
  <div
    class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-12"
  >
    <div class="w-full md:w-7/12 text-center md:text-left space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight">
        Estamos listos para impulsar tu proyecto
      </h2>
      <div class="divider"></div>
      <p class="text-base sm:text-lg text-gray-300 max-w-xl mx-auto md:mx-0">
        Escríbenos por WhatsApp y recibe atención personalizada sobre nuestras
        soluciones tecnológicas para mipymes e instituciones.
      </p>
      <a
        href="https://wa.me/529932794832"
        target="_blank"
        class="btn btn-xl bg-blue-700 rounded-lg text-white"
      >
        Contáctanos
      </a>
    </div>

    <div class="w-full md:w-5/12 flex justify-center md:justify-end relative">
      <!-- Contenedor relativo para planeta + astronauta -->
      <div class="relative">
        <!-- Mundo ligeramente más pequeño y abajo -->
        <img
          src="/mundo.webp"
          alt="Mundo"
          loading="lazy"
          class="relative w-72 sm:w-80 md:w-[30rem] lg:w-[32rem] opacity-90 z-0 drop-shadow-[0_0_40px_rgba(59,130,246,0.9)] mt-10"
        />

        <!-- Astronauta centrado y grande -->
        <img
          src="/astronaut.webp"
          alt="Astronauta"
          loading="lazy"
          class="absolute top-1/2 left-1/2 w-28 sm:w-32 md:w-36 lg:w-40 -translate-x-1/2 -translate-y-1/2 animate-float brightness-150 contrast-110 z-10 drop-shadow-[0_8px_12px_rgba(0,0,0,0.7)]"
        />
      </div>
    </div>
  </div>
</section>
